form.col-xs-12.col-md-6.col-md-offset-3#login-form(role="form")
  .row
    .alert.hidden(role="alert")
      button(type="button", class="close", aria-label="close")
        span(aria-hidden="true") &times;
      span.alert-text
  .form-group
    input.form-control.bottom-space(type="email", name="email", placeholder="email address")
  .form-group
    input.form-control(type="password", name="password", placeholder="password")
  .form-group
    input#remember-me(type="checkbox", name="remember", value="1")
    label(for="remember-me") remember me
  .form-group.form-buttons
    button.btn.btn-primary.btn-lg.active(name="submit", type="button") submit